{
  "name": "ChromePadder",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Provides gamepad and Kinect control for the web browser.",
  "icons": {
    "16":  "16x16.png",
    "48":  "48x48.png",
    "128": "128x128.png"
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "page": "chromepadder.html"
  },
  "permissions": [
    "tabs",
    "notifications",
    "*://*/*"
  ],
  "web_accessible_resources": [
    "icon.png",
    "crosshairs/circle/circle-06.png"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["injection.js"],
      "run_at": "document_start"
    }
  ],
  "plugins": [
    { "path": "kinectplugin/libcpkinect.so" }
  ]
}
