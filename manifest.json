{
  "name": "ChromePadder",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Provides gamepad control for the web browser.",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "page": "chromepadder.html"
  },
  "permissions": [
    "tabs",
    "*://*/*",
    "notifications"
  ],
  "web_accessible_resources": [
    "icon.png",
    "crosshairs/circle/circle-06.png"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["injection.js"],
      "run_at": "document_start"
    }
  ]
}
